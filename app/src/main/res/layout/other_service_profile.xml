<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="10dp"
                android:background="@color/bgwhite"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:paddingBottom="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                android:fontFamily="@font/handlee"
                                android:gravity="center"
                                android:text="@string/req_info" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/order_noT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/order_no"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/dateT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/date"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/typeT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/req_type"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/statusT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/req_status"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_status"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/nameT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/name"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/passportT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/P_No"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/p_no"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:visibility="gone">

                            <TextView

                                android:id="@+id/nationalityT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/nationality"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_nationality"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View
                            style="@style/Divider"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/permitT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/permit"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_permit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/destinationT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/Destination"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_destination"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/jobT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/profession"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_profession"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/fdateT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/flight_date"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_flight_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/ftimeT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/flight_time"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_flight_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/phone"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <TextView

                                android:id="@+id/priceT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/price"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/luggage_no"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_luggage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:visibility="gone">

                            <TextView

                                android:id="@+id/packageT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/package_info"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_package"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:visibility="gone">

                            <TextView

                                android:id="@+id/medicalT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1.8"
                                android:fontFamily="@font/handlee"
                                android:paddingStart="2dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="2dp"
                                android:paddingBottom="5dp"
                                android:text="@string/medical_details"
                                android:textColor="@color/primary_text"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/req_medical_details"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/handlee"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="TextView"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <View style="@style/Divider" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
